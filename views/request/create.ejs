<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title><%= title %></title>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
			crossorigin="anonymous" />
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,0,0" />
		<link rel="stylesheet" href="/css/style.css" />
	</head>

	<body>
		<main>
			<div class="container-fluid">
				<div class="row min-vh-100">
					<%- include('../partials/sidebar') %>
					<div class="col-12 col-lg-10 p-5">
						<%- include('../partials/header') %>

						<form class="mt-5" id="requestForm">
							<div class="mb-3">
								<label for="document" class="form-label">Document</label>
								<select class="form-select" id="document" name="document">
									<option selected disabled value="">Choose Document</option>
									<% documents && documents.forEach(function(document) { %>
									<option value="<%= document.id %>"><%= document.title %></option>
									<% }) %>
								</select>
							</div>

							<div class="mb-3">
								<label for="recipient" class="form-label">Recipient</label>
								<select class="form-select" id="recipient" name="recipient">
									<option selected disabled value="">Choose Recipient</option>
									<% users && users.forEach(function(user) { %>
									<option value="<%= user.id %>"><%= user.fullname %></option>
									<% }) %>
								</select>
							</div>

							<button type="submit" class="btn btn-signme d-inline-flex align-items-center">
								<span class="material-symbols-rounded me-3"> send </span>
								Submit Request
							</button>
						</form>

						<iframe id="pdf" class="rounded-3 overflow-hidden mt-5"></iframe>
					</div>
				</div>
			</div>
		</main>

		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
			crossorigin="anonymous"></script>

		<script>
			const documents = JSON.parse('<%- JSON.stringify(documents) %>');
			const documentSelect = document.getElementById('document');
			const pdf = document.getElementById('pdf');

			documentSelect.addEventListener('change', (e) => {
				const id = e.target.value;
				const document = documents.find((document) => document.id == id);
				pdf.src = document.file;
			});

			const form = document.getElementById('requestForm');

			form.addEventListener('submit', (e) => {
				e.preventDefault();

				const formData = {
					document: form.document.value,
					recipient: form.recipient.value,
				};

				Object.keys(formData).forEach((key) => {
					if (!formData[key]) {
						alert('Please fill all fields');
						return;
					}
				});

				fetch('/api/requests', {
					method: 'POST',
					headers: {
						'Content-Type': 'application/json',
					},
					body: JSON.stringify(formData),
				})
					.then((response) => response.json())
					.then((data) => {
						if (data.error) {
							alert(data.error);
							return;
						}
						alert(data.message);
					})
					.catch((error) => {
						console.error(error);
						alert('Create request failed');
					});
			});
		</script>
	</body>
</html>
